<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddnewInvoiceController</servlet-name>
        <servlet-class>controller.AddnewInvoiceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteInvoice</servlet-name>
        <servlet-class>controller.DeleteInvoice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInvoice</servlet-name>
        <servlet-class>controller.UpdateInvoice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>controller.SearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SumInvoices</servlet-name>
        <servlet-class>controller.SumInvoices</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddnewInvoiceController</servlet-name>
        <url-pattern>/AddnewInvoiceController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteInvoice</servlet-name>
        <url-pattern>/DeleteInvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateInvoice</servlet-name>
        <url-pattern>/UpdateInvoice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/SearchController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SumInvoices</servlet-name>
        <url-pattern>/SumInvoices</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
